generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  male
  female
  other
  unknown
}

model User {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  email String
  password String @default("password_not_set")
  gender Gender? @default(unknown)
  height Decimal? @db.Decimal
  is_deleted Boolean @default(false)
  created_at DateTime @default(now())

  healthTrackers HealthTracker[]
  expenseTrackers ExpenseTracker[]
}

model HealthTracker {
  id Int @id @default(autoincrement())
  weight        Decimal @db.Decimal
  waist         Decimal @db.Decimal
  neck          Decimal @db.Decimal
  bmi           Decimal @db.Decimal
  bodyFat       Decimal @db.Decimal
  bodyFatWeight Decimal @db.Decimal
  userId        Int
  user          User @relation(fields: [userId], references: [id])
  created_at    DateTime @default(now())
}


model ExpenseTracker {
  id            Int @id @default(autoincrement())
  date          DateTime
  expense_title String
  amount        Decimal @db.Decimal
  categoryId    Int
  category      Category @relation(fields: [categoryId], references: [id])
  userId        Int
  user          User @relation(fields: [userId], references: [id])
  created_at    DateTime @default(now())
}


model Category {
  id                Int @id @default(autoincrement())
  title             String @unique
  created_at        DateTime @default(now())

  expense_trackers  ExpenseTracker[]
}